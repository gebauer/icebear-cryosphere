# Database Configuration
MYSQL_ROOT_PASSWORD=change_me_root_password
MYSQL_DATABASE=icebear
MYSQL_USER=icebear_user
MYSQL_PASSWORD=change_me_password

# IceBear Storage Paths
ICEBEAR_STORAGE_PATH=/icebearstore
ICEBEAR_BACKUP_PATH=/icebear_backup

# IceBear Source Configuration
# Version to download (e.g., 1.10.2)
ICEBEAR_VERSION=1.10.2

# Source type: official, github, or volume
# - official: Download from https://www.icebear.fi/releases/
# - github: Clone from GitHub repository (requires ICEBEAR_GITHUB_REPO)
# - volume: Use source from mounted volume (no download)
ICEBEAR_SOURCE_TYPE=official

# GitHub repository URL (only used if ICEBEAR_SOURCE_TYPE=github)
# Example: https://github.com/username/icebear.git
ICEBEAR_GITHUB_REPO=

# Update IceBear source on container start (true/false)
# If true, will check and download/update source on every container start
ICEBEAR_UPDATE_ON_START=false

# IceBear source path inside container
ICEBEAR_SOURCE_PATH=/var/www/icebear

# Server Configuration
SERVER_HOSTNAME=localhost

# PHP Configuration
PHP_MEMORY_LIMIT=512M

# Optional: HTTPS Configuration (if not using reverse proxy)
# ENABLE_HTTPS=false
# LETSENCRYPT_EMAIL=admin@example.org
